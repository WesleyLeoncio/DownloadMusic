<Window x:Class="DownloadMusic.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Title="CustomDialog">

    <Window.Resources>
        <!-- Estilo global para os botões personalizados -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="38" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,2" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12"
            Background="#EB3349"
            BorderBrush="White"
            BorderThickness="1"
            Padding="20"
            Margin="10">

        <StackPanel>
            <!-- Ícone -->
            <TextBlock x:Name="TxtIcon"
                       FontSize="40"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Text="❓" />

            <!-- Título -->
            <TextBlock x:Name="TxtTitle"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5" />

            <!-- Mensagem -->
            <TextBlock x:Name="TxtMessage"
                       FontSize="16"
                       TextWrapping="Wrap"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnYes"
                        Content="Sim"
                        FontFamily="Segoe UI Variable Display"
                        FontSize="18"
                        Background="#B71C1C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#B71C1C"
                        Width="100"
                        Height="30"
                        Click="BtnYes_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.25" />
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C62828" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                            <!-- Pressionado -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D32F2F" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="BtnNo"
                        Content="Não"
                        FontFamily="Segoe UI Variable Display"
                        FontSize="18"
                        Background="#B71C1C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#B71C1C"
                        Width="100"
                        Height="30"
                        Margin="5,0"
                        Click="BtnNo_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.25" />
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C62828" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                            <!-- Pressionado -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D32F2F" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="BtnOk"
                        Content="OK"
                        FontFamily="Segoe UI Variable Display"
                        FontSize="18"
                        Background="#B71C1C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#B71C1C"
                        Width="100"
                        Height="30"
                        Margin="5,0"
                        Click="BtnOk_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.25" />
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <!-- Hover -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#C62828" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                            <!-- Pressionado -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D32F2F" />
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="RenderTransformOrigin"
                                                        Value="0.5,0.5" />
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>